<h1>Update a song: </h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Artist Name: </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>">

  <label>Genres: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name%>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">

</form>
